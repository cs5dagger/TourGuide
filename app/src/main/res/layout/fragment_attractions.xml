<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.top.AttractionsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Attractions"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/title_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nAligarh Fort"
            android:id="@+id/fort_title_text"
            android:textSize="22sp"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#2B2828"
            android:layout_below="@+id/title_text"/>

        <ImageView
            android:id="@+id/fort_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fort_title_text"
            app:srcCompat="@drawable/aligarh"
            tools:srcCompat="@drawable/aligarh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fort_image"
            android:text="example"
            android:padding="5dp"
            android:id="@+id/fort_info"
            android:layout_marginTop="5dp"
            android:textColor="#2B2828"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aligarh Muslim University"
            android:id="@+id/amu_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#2B2828"
            android:layout_below="@+id/fort_info"/>

        <ImageView
            android:id="@+id/amu_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/amu_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/univ"
            tools:srcCompat="@drawable/univ" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amu_image"
            android:text="example"
            android:padding="5dp"
            android:id="@+id/amu_info"
            android:layout_marginTop="5dp"
            android:textColor="#2B2828"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sir Syed Museum"
            android:id="@+id/museum_title"
            android:textSize="22sp"
            android:gravity="left"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#2B2828"
            android:layout_below="@+id/amu_info"/>

        <ImageView
            android:id="@+id/museum_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/museum_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/museum"
            tools:srcCompat="@drawable/museum" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/museum_image"
            android:text="example"
            android:padding="5dp"
            android:id="@+id/museum_info"
            android:layout_marginTop="5dp"
            android:textColor="#2B2828"
            android:textSize="16sp"/>

    </RelativeLayout>
</ScrollView>